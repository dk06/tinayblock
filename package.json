{
  "name": "Tinyblock",
  "version": "0.0.4",
  "description": "A minimal Electron application",
  "main": "./app/main.js",
  "scripts": {
    "postinstall": "install-app-deps && electron-rebuild --force",
    "start": "electron .",
    "dev": "NODE_ENV='development' npm run start",
    "dist": "build -m",
    "rebuild": "electron-rebuild --force",
    "publish": "build mac -p always",
    "package-mac": "electron-packager .",
    "package-win": "electron-packager . electron-tutorial-app --overwrite --asar=true --platform=win32 --arch=ia32 --icon=assets/icons/win/icon.ico --prune=true --out=release-builds --version-string.CompanyName=CE --version-string.FileDescription=CE --version-string.ProductName=\"CryptoApp\"",
    "package-linux": "electron-packager . electron-tutorial-app --overwrite --asar=true --platform=linux --arch=x64 --icon=assets/icons/png/1024x1024.png --prune=true --out=release-builds"
  },
  "repository": "https://github.com/dk06/tinayblock",
  "keywords": [
    "Electron",
    "quick",
    "start",
    "tutorial",
    "demo"
  ],
  "author": "GitHub",
  "license": "CC0-1.0",
  "devDependencies": {
    "electron": "^3.0.2",
    "electron-builder": "^20.28.4",
    "electron-rebuild": "^1.8.1"
  },
  "dependencies": {
    "bignumber.js": "^7.2.1",
    "bip32": "^0.1.0",
    "bip39": "^2.5.0",
    "bitcoin-core": "^2.0.0",
    "bitcoincashjs": "^0.1.10",
    "bitcoinjs-lib": "^4.0.2",
    "classify": "^0.10.0",
    "electron-is-dev": "^1.0.1",
    "electron-localshortcut": "^3.1.0",
    "electron-log": "^2.2.17",
    "electron-packager": "^13.0.1",
    "electron-prompt": "^1.3.0",
    "electron-updater": "^4.0.6",
    "ethereumjs-tx": "^1.3.4",
    "ethereumjs-util": "^5.2.0",
    "iota.lib.js": "^0.5.1",
    "litecore-lib": "^0.13.22",
    "node-abi": "^2.5.1",
    "node-hid": "^0.7.6",
    "nvm": "0.0.4",
    "payment": "^2.3.0",
    "play-sound": "^1.1.2",
    "replace-in-file": "^3.4.2",
    "usb": "^1.3.2",
    "usb-detection": "^3.1.0",
    "web3": "^1.0.0-beta.34"
  },
  "build": {
    "appId": "com.tinyblock",
    "publish": [
      {
        "provider": "github",
        "releaseType": "tinayblock",
        "owner": "dk06"
      }
    ],
    "mac": {
      "category": "your.app.category.type",
      "target": [
        "zip",
        "dmg"
      ]
    },
    "linux": {
      "target": "deb",
      "category": "Development"
    }
  }
}
